

: +speller ( n is between 0 and 4 inclusive --)
	dup 0 = if
		." zero" cr else
	dup 1 = if
		." one" cr else
	dup 2 = if
		." two" cr else
	dup 3 = if
		." three" cr else
	dup 4 = if
		." four" cr else
	then then then then then drop ;

: out-of-range? ( n -- f)
	abs > 4 ;

: negative? ( n --f)
	0< ;

: speller ( n --)
	dup out-of-range? if
		." out of range" cr else
	dup negative? if
		." negative "
	then +speller
	then ;
