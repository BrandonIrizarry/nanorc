: +speller ( n is between 0 and 4 inclusive --)
	dup 0 = if
		." zero" cr else
	dup 1 = if
		." one" cr else
	dup 2 = if
		." two" cr else
	dup 3 = if
		." three" cr else
	dup 4 = if
		." four" cr else
	then then then then then drop ;

: out-of-range? ( n -- f)
	abs 4 > ;

: parts ( n -- magnitude negative?)
	dup abs swap 0< ;

: speller ( n --)
	parts over out-of-range? if
		." out of range" 2drop
	else if ." negative" then +speller ;
