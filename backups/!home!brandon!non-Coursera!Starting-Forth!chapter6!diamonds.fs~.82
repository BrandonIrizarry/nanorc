: prepare ( n inc -- n inc n index)
	2dup dup 0< if abs swap then ;

: triangle ( n inc --)
	prepare do
		over i row
	dup +loop
	2drop ;

: diamond ( n --)
	1 2dup
	
	triangle 
	negate triangle ;


