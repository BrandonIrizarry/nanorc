local RANK = 1
local QUESTION = 2
local ANSWER = 3

local function query (msg)
	if msg then
		io.write(msg)
	end

	io.write("[y/n]")

	repeat
		ans = io.read()
	until ans == "y" or ans == "n"

	return ans == "y"
end

local function ask (card)
	print(card[QUESTION])
	query("Enter 'y' to show answer")
	print(card[ANSWER])

	if query("Did you get this one?") then
		card[RANK] = card[RANK] + 1
	else
		card[RANK] = 0
	end
end

local function examine (card)
	print(string.format("rank=%d", card[RANK]))
	print(string.format("question=%s", card[QUESTION]))
	print(string.format("answer=%s", card[ANSWER]))

