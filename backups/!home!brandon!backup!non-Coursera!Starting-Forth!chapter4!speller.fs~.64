: +speller ( n is between 0 and 4 inclusive --)
	dup 0 = if
		." zero" cr else
	dup 1 = if
		." one" cr else
	dup 2 = if
		." two" cr else
	dup 3 = if
		." three" cr else
	dup 4 = if
		." four" cr else
	then then then then then drop ;

: check-range
	dup abs 4 > if
		." out of range" cr drop exit then ;

: prefixer
	dup 0< if ." negative" then ;

: speller ( n --)
\ 	dup abs 4 > if
\ 	." out of range" cr drop exit then
	
	check-range prefixer then abs +speller ;
