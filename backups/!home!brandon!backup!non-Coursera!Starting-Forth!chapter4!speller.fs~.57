: +speller ( n is between 0 and 4 inclusive --)
	dup 0 = if
		." zero" cr else
	dup 1 = if
		." one" cr else
	dup 2 = if
		." two" cr else
	dup 3 = if
		." three" cr else
	dup 4 = if
		." four" cr else
	then then then then then drop ;

: out-of-range? ( n --)
	abs 4 > ;

\ : negative? ( n --)
\ 	0< ;

: prefixer
	dup 0< if ." negative" ;

: speller ( n --)
	dup out-of-range? if
	." out of range" cr drop exit then
	
	prefixer then abs +speller ;
