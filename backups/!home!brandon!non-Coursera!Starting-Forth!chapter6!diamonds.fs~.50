: debug ( n -- n)
	dup . cr ;


: triangle ( inc start finish --)
	over 1- -rot do
		dup debug i debug row
	over +loop 2drop ;


: prepare ( n down? -- input)
	dup 0< if swap 1 tuck
	else 1 -rot then ;


