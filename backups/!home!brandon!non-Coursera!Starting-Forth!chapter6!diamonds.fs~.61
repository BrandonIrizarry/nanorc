: piece ( n --)
	2* 1- stars ;

: row ( idx base --)
	 tuck - tuck spaces piece spaces cr ;

: +triangle ( start finish --)
	over 1- -rot do
		dup i row
	loop drop ;		

: debug ( n -- n)
	dup . cr ;

\ : triangle ( inc start finish --)
\ 	over 1- -rot do
\ 		dup debug i debug row
\ 	over +loop 2drop ;

: prepare ( n inc -- limit inc limit index)
	over -rot dup 0< if swap 1 swap
	else 1 -rot then ;

: triangle ( n inc --)
	prepare do
		over i row
	dup +loop
	2drop ;


