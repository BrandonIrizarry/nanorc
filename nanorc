# set tab width to 4 spaces
set tabsize 4

# set colors for the line-number display
set numbercolor brightwhite,red

# set colors for the title bar
set titlecolor brightwhite,red

# show the line-number display
set linenumbers

# don't show the help-lines at the bottom of the screen
set nohelp

# insert into a new buffer by default
set multibuffer

# set a stripe to help guide source-code line-lengths
set guidestripe 80
set stripecolor black,white

# put backup files in a dedicated directory
set backup
set backupdir "~/.nano/backups/"

# justify paragraphs and blocks to 80 characters of length
set fill 80

# make the home key smarter (useful for heavily indented code)
set smarthome

# break a single logical line of text into the next line if it's too long
set softwrap
